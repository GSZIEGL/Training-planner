def filter_exercises(db, age, tac, techs):
    out = []
    for ex in db:
        if age and ex.get("age_group_code") != age:
            continue
        if tac and ex.get("tactical_code") != tac:
            continue
        if techs:
            if ex.get("technical_code") not in techs:
                continue
        out.append(ex)
    return out


